# ğŸ“Œ STEP 1 â€” Import libraries
import pandas as pd
import matplotlib.pyplot as plt
from IPython.display import display
from google.colab import files

plt.style.use('seaborn-v0_8')

# ğŸ“Œ STEP 2 â€” Load Sample Data from GitHub

procurement_url = "https://raw.githubusercontent.com/CEOApplepine/automated-procurement-insights/main/data/oracle_procurement.csv"
maintenance_url = "https://raw.githubusercontent.com/CEOApplepine/automated-procurement-insights/main/data/maximo_maintenance.csv"

print("Loading data from GitHub...")

procurement = pd.read_csv(procurement_url)
maintenance = pd.read_csv(maintenance_url)

print("âœ… Procurement Data Loaded:")
display(procurement.head())

print("âœ… Maintenance Data Loaded:")
display(maintenance.head())


# ğŸ“Œ STEP 3 â€” Merge Procurement + Maintenance Data
merged = pd.merge(procurement, maintenance, on='PO_ID', how='left')
merged['Maintenance_Cost'] = merged['Maintenance_Cost'].fillna(0)

print("âœ… Merged Dataset:")
display(merged.head())


# ğŸ“Œ STEP 4 â€” Spend Analytics
total_procurement = merged['Amount'].sum()
total_maintenance = merged['Maintenance_Cost'].sum()
total_spend = total_procurement + total_maintenance

print("============================================")
print("ğŸ“Š TOTAL SPEND ANALYSIS")
print("============================================")
print(f"ğŸ’° Total Procurement Spend: ${total_procurement:,.2f}")
print(f"ğŸ”§ Total Maintenance Spend: ${total_maintenance:,.2f}")
print(f"ğŸ“¦ Total Combined Spend:   ${total_spend:,.2f}")
print("============================================")


# ğŸ“Œ STEP 5 â€” Spend by Supplier & Category
supplier_spend = (
    merged.groupby('Supplier')['Amount']
    .sum()
    .reset_index()
    .sort_values('Amount', ascending=False)
)

category_spend = (
    merged.groupby('Category')['Amount']
    .sum()
    .reset_index()
    .sort_values('Amount', ascending=False)
)

print("\nğŸ“Š Supplier Spend:")
display(supplier_spend)

print("\nğŸ“Š Category Spend:")
display(category_spend)


# ğŸ“Œ STEP 6 â€” Visualizations

# Supplier Spend Chart
plt.figure(figsize=(8,4))
plt.bar(supplier_spend['Supplier'], supplier_spend['Amount'], color='skyblue')
plt.title("Supplier Spend Breakdown")
plt.xticks(rotation=45)
plt.ylabel("Spend ($)")
plt.tight_layout()
plt.show()

# Category Spend Chart
plt.figure(figsize=(6,4))
plt.bar(category_spend['Category'], category_spend['Amount'], color='lightgreen')
plt.title("Category Spend Breakdown")
plt.xticks(rotation=45)
plt.ylabel("Spend ($)")
plt.tight_layout()
plt.show()


# ğŸ“Œ STEP 7 â€” Save & Download Reports
supplier_file = "supplier_spend_summary.csv"
category_file = "category_spend_summary.csv"

supplier_spend.to_csv(supplier_file, index=False)
category_spend.to_csv(category_file, index=False)

print("\nğŸ“ Saving reports...")
files.download(supplier_file)
files.download(category_file)


# ğŸ“Œ STEP 8 â€” Recruiter-Friendly Summary
print("\n===================================================")
print("ğŸ¯ PROJECT SUMMARY â€” Automated Procurement Insights")
print("===================================================")
print(f"ğŸ“¦ Total Spend Analyzed: ${total_spend:,.2f}")
print("\nğŸ† Top 3 Suppliers:")
display(supplier_spend.head(3))
print("\nğŸ“Œ Category Spend Overview:")
display(category_spend)
print("===================================================")

print("ğŸ‰ Analysis Complete â€” You are ready for recruiters!")
